<div ng-controller="ProfileController" class="row" ng-init="initMainView()">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Family Details</h3>
                <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
            </div>
            <div class="panel-body">
                @*sample*@
                <div class="form-horizontal">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-highlight">
                            <thead>
                            <th>Name</th>
                            <th>Relation</th>
                            <th>Gender</th>
                            <th>DOB</th>
                            <th>Age</th>
                            <th>BloodGroup</th>
                            <th>Occupation</th>
                            <th>Med.Insurance</th>
                            <th>AadharNumber</th>
                            </thead>
                            <tbody>
                                <tr ng-repeat="familydetails in familyDetailsGridCollection">
                                    <td>{{familydetails.firstname + familydetails.lastname }}</td>
                                    <td>{{familydetails.relation}}</td>
                                    <td>{{familydetails.gender}}</td>
                                    <td>{{familydetails.dateofbirth}}</td>
                                    <td>{{familydetails.age}}</td>
                                    <td>{{familydetails.bloodgroup}}</td>
                                    <td>{{familydetails.occupation}}</td>
                                    <td>{{familydetails.Ismediclaim}}</td>
                                    <td>{{familydetails.aadhaar}}</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="col-md-12 form-group">
                            <button type="button" data-toggle="modal" data-target="#exampleModal" class="btn btn-primary">
                                +Add
                            </button>
                        </div>
