@*Modal*@
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Dependent Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="House-No" class="control-label col-sm-4 col-md-5 ">FirstName</label>
                                        <div class="col-sm-8 col-md-7  nopadding">
                                            <input type="text" class="form-control" ng-model="familydata.firstname" placeholder="FirstName">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="House-No" class="control-label col-sm-4 col-md-5 ">Middle Name</label>
                                        <div class="col-sm-8 col-md-7  nopadding">
                                            <input type="text" class="form-control" ng-model="familydata.middlename" placeholder="Middle Name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="House-No" class="control-label  col-sm-4 col-md-5  ">Last Name*</label>
                                        <div class="col-sm-8 col-md-7  nopaddingLEFT">
                                            <input type="text" class="form-control" ng-model="familydata.lastname" placeholder="Last Name">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">DOB</label>
                                        <div class="col-sm-8 col-md-7  nopadding">
                                            <input type="text" class="form-control" ng-model="familydata.dateofbirth" placeholder="DateOfBirth">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">Age</label>
                                        <div class="col-sm-8 col-md-7  nopadding">
                                            <input type="text" class="form-control" ng-model="familydata.age" placeholder="Age">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">Blood Group</label>
                                        <div class="col-sm-8 col-md-7  nopaddingLEFT">
                                            <input type="text" class="form-control" ng-model="familydata.bloodgroup" placeholder="Blood Group">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">Gender</label>
                                        <div class="col-sm-8 col-md-7  nopadding">
                                            <input type="text" class="form-control" ng-model="familydata.gender" placeholder="Gender">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">Relation</label>
                                        <div class="col-sm-8 col-md-7  nopadding">
                                            <input type="text" class="form-control" ng-model="familydata.relation" placeholder="Relation">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">Birth Place</label>
                                        <div class="col-sm-8 col-md-7  nopaddingLEFT">
                                            <input type="text" class="form-control" ng-model="familydata.birthplace" placeholder="Birth Place">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">Occupation</label>
                                        <div class="col-sm-8 col-md-7  nopadding">
                                            <input type="text" class="form-control" ng-model="familydata.occupation" placeholder="Occupation">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">Dependent</label>
                                        <div class="col-sm-8 col-md-7  nopadding">
                                            <input type="text" class="form-control" ng-model="familydata.dependent" placeholder="Dependent">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">Mediclaim*</label>
                                        <div class="col-sm-8 col-md-7  nopaddingLEFT">
                                            <input type="text" class="form-control" ng-model="familydata.mediclaim" placeholder="Mediclaim">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">Country Of Birth</label>
                                        <div class="col-sm-8 col-md-7  nopadding">
                                            <input type="text" class="form-control" ng-model="familydata.countryofbirth" placeholder="Country of Birth">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">Nationality</label>
                                        <div class="col-sm-8 col-md-7  nopadding">
                                            <input type="text" class="form-control" ng-model="familydata.nationality" placeholder="Nationality">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 ">
                                    <div class="form-group">
                                        <label for="Area1" class="control-label  col-sm-4 col-md-5  ">	Aadhaar No.</label>
                                        <div class="col-sm-8 col-md-7  nopaddingLEFT">
                                            <input type="text" class="form-control" ng-model="familydata.aadharnumber" placeholder="AadhaarNumber">
                                        </div>
                                    </div>
