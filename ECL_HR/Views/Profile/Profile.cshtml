
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Master/_LayoutProfile_home.cshtml";
}




<div ng-controller="ProfileController" ng-init="initMainView()">
    <div class="row">
        <div id="statusMsg" class="alert alert-success alert-dismissible alert-done" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Success!</strong> <label ng-bind="statusMessage"></label>
        </div>
        <div class="col-md-6">
            <fieldset>
                <legend>present</legend>
                <button class="btn btn-primary btn_edit" data-toggle="modal" data-target="#commModal">
                    <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                </button>


                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="email">House No :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.HouseNo}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="email">Street/Area1 :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.Street1}}</label>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="email">Street/Area2 :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.Street2}}</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="pwd">City/District :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.City}}/{{ProfileCollection.District}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="email">State/PIN :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.State}}/{{ProfileCollection.PinCode}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="pwd">Country :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.Country}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="email">Home Phone :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.HomePhone}}</label>
                        </div>
                    </div>
                </div>

            </fieldset>
        </div>
        <div class="col-md-6">
            <div>
                <input type="checkbox" /> Is same as Present address
            </div>

            <fieldset>
                <legend>Permanent</legend>
                <button class="btn btn-primary btn_edit" data-toggle="modal" data-target="#commModal">
                    <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                </button>
               
                
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="HouseNo">House No :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.HouseNo}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="email">Street/Area1 :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.Street1}}</label>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="email">Street/Area2 :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.Street2}}</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="pwd">City/District :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.City}}/{{ProfileCollection.District}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="email">State/PIN :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.State}}/{{ProfileCollection.PinCode}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="pwd">Country :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.Country}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 bold" for="email">Home Phone :</label>
                        <div class="col-sm-9">
                            <label class="control-label col-sm-8 text-left" for="email">{{ProfileCollection.HomePhone}}</label>
                        </div>
                    </div>
                </div>

            </fieldset>
        </div>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="commModal" tabindex="-1" role="dialog" aria-labelledby="commModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="commModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label for="House-No" class="control-label col-sm-3 bold">HouseNo</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="HouseNo" placeholder="House No" ng-model="ProfileCollection.HouseNo">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Area1" class="control-label col-sm-3 bold">Street/Area1</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="Area1" placeholder="Street/Area1" ng-model="ProfileCollection.Street1">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Area2" class="control-label col-sm-3 bold">Street/Area2</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="Area2" placeholder="Street/Area2" ng-model="ProfileCollection.Street2">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="City" class="control-label col-sm-3 bold">City</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="City" placeholder="City" ng-model="ProfileCollection.City">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="District" class="control-label col-sm-3 bold">District</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="District" placeholder="District" ng-model="ProfileCollection.District">
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="State" class="control-label col-sm-3 bold">State</label>
                                    <div class="col-sm-9">
                                        <select class="form-control" ng-model="ProfileCollection.StateId">
                                            <option ng-repeat="state in sateCollection" ng-value="state.Id">{{state.DisplayText}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="PinCode" class="control-label col-sm-3 bold">PinCode</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="PinCode" placeholder="PinCode" ng-model="ProfileCollection.PinCode">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Country" class="control-label col-sm-3 bold">Country</label>
                                    <div class="col-sm-9">
                                        <select class="form-control" ng-model="ProfileCollection.CountryId">
                                            <option ng-repeat="country in countiresCollection" ng-value="country.Id">{{country.DisplayText}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Home-Phone" class="control-label col-sm-3 bold">Home Phone</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="HomePhone" placeholder="Home Phone" ng-model="ProfileCollection.HomePhone">
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" ng-click="saveCommunicationDetails(ProfileCollection)">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

